{
  "compilerOptions": {
    "strict": true,
    "moduleResolution": "node", // Required for Firebase module resolution
    "types": ["firebase/auth", "firebase/firestore"], // Add Firebase types
    "paths": {
      "@/*": ["./*"]
    }
  },
  "include": [
    "**/*.ts",
    "**/*.tsx",
    ".expo/types/**/*.ts",
    "expo-env.d.ts",
    "app/(auth)/sign-in.tsx"
  ],
  "extends": "expo/tsconfig.base"
}